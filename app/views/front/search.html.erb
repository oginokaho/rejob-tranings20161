<h1>rejob_求人一覧</h1>
<div>

  <p>都道府県を選択してください</p>

  <form  action="search" method="get">
    <input name="authenticity_token" type="hidden" value="1234" />
    <select name="area" name="name" >
      <% Search.all.each do |area| %>
        <option value="<%= area.area_name %>"><%= area.area_name %><br></option>
      <% end %>
    </select>
    <button type="search" >検索</buton>
  </form>
</div>


<section class="box-pt1 mb_20">
        <div class="heading2-pt2 heading2-pt2--border-bt">
          <h2>案件一覧</h2>

          <p>▼<%= @job.count %>件表示しています。</p> <br><br>

        <% @job.each do |job| %>
        <dl class="list-dl-pt3 list-dl-pt3--dt9em txt_size_12">
          <h4><a href="/job?id=<%= job.id %>"><%= job.title %></a></h4>
          <dt>詳細</dt>
            <dd>
              <ul class="ul-inline ul-inline--cut">
                <li>
                    <a><%= job.description %></a>
                </li>
              </ul>
            </dd>
          <dt>エリア</dt>
            <dd>
              <ul class="ul-inline ul-inline--cut">
                <li>
                    <a href="/search?area=<%= job.area %>"><%= job.area %></a>
                </li>
            </ul>
          </dd>
        </dl>
          <br>
        <% end %>
        </div>
      </section>


